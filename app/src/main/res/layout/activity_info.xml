<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewDuration2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:text="@string/duration"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewNumParticipants2" />

            <EditText
                android:id="@+id/editTextDur"
                android:layout_width="272dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/ic_fi_rr_pencil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.769"
                app:layout_constraintStart_toEndOf="@+id/textViewDuration2"
                app:layout_constraintTop_toBottomOf="@+id/editTextPartNum" />

            <TextView
                android:id="@+id/textViewNumParticipants2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:text="@string/number_participants"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewTime2" />

            <EditText
                android:id="@+id/editTextPartNum"
                android:layout_width="150dp"
                android:layout_height="27dp"
                android:layout_marginTop="12dp"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/ic_fi_rr_pencil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.85"
                app:layout_constraintStart_toEndOf="@+id/textViewNumParticipants2"
                app:layout_constraintTop_toBottomOf="@+id/editTextTime2" />

            <TextView
                android:id="@+id/textViewTime2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:text="@string/time"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewAddress2" />

            <EditText
                android:id="@+id/editTextTime2"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="12dp"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/ic_fi_rr_pencil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toEndOf="@+id/textViewTime2"
                app:layout_constraintTop_toBottomOf="@+id/editTextAddress2" />

            <TextView
                android:id="@+id/textViewActName2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:text="@string/activity_name"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextActName"
                android:layout_width="204dp"
                android:layout_height="30dp"
                android:layout_marginTop="48dp"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/ic_fi_rr_pencil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.869"
                app:layout_constraintStart_toEndOf="@+id/textViewActName2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewActOwner2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:text="@string/organization"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewActName2" />

            <EditText
                android:id="@+id/editTextOrganization"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="12dp"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/ic_fi_rr_pencil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.538"
                app:layout_constraintStart_toEndOf="@+id/textViewActOwner2"
                app:layout_constraintTop_toBottomOf="@+id/editTextActName" />

            <TextView
                android:id="@+id/textViewAddress2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:text="@string/address"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewActOwner2" />

            <EditText
                android:id="@+id/editTextAddress2"
                android:layout_width="262dp"
                android:layout_height="30dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/ic_fi_rr_pencil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textViewAddress2"
                app:layout_constraintTop_toBottomOf="@+id/editTextOrganization" />

            <TextView
                android:id="@+id/textViewRating"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:text="@string/rating"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDuration2" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="29dp" />

            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="240dp"
                android:layout_height="48dp"
                android:layout_marginTop="108dp"
                android:numStars="5"
                app:layout_constraintEnd_toEndOf="@+id/textViewRating"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textViewRating"
                app:layout_constraintTop_toBottomOf="@+id/textViewRating" />

            <EditText
                android:id="@+id/editTextComment"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_comment_box"
                android:ems="10"
                android:gravity="top"
                android:hint="@string/add_comment"
                android:inputType="textPersonName"
                android:padding="7dp"
                app:layout_constraintEnd_toEndOf="@+id/rating_bar"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/rating_bar"
                app:layout_constraintTop_toBottomOf="@+id/rating_bar" />

            <Button
                android:id="@+id/submitBttn"
                android:layout_width="78dp"
                android:layout_height="41dp"
                android:layout_marginTop="147dp"
                android:text="@string/submit"
                android:textSize="9sp"
                app:layout_constraintEnd_toEndOf="@+id/editTextDur"
                app:layout_constraintHorizontal_bias="0.893"
                app:layout_constraintStart_toEndOf="@+id/textViewDuration2"
                app:layout_constraintTop_toBottomOf="@+id/editTextDur" />

            <Button
                android:id="@+id/button"
                android:layout_width="82dp"
                android:layout_height="42dp"
                android:layout_marginBottom="30dp"
                android:text="@string/post"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/editTextComment"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/editTextComment"
                app:layout_constraintTop_toBottomOf="@+id/editTextComment"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/submitChangesBttn"
                android:layout_width="97dp"
                android:layout_height="48dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="100dp"
                android:text="@string/save_changes"
                android:textSize="9sp"
                app:layout_constraintEnd_toEndOf="@+id/editTextDur"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/editTextDur"
                app:layout_constraintTop_toBottomOf="@+id/editTextDur" />

            <ImageButton
                android:id="@+id/deleteActBttn"
                android:layout_width="64dp"
                android:layout_height="51dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_fi_rr_trash"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/button"
                app:layout_constraintTop_toBottomOf="@+id/button"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/imageViewType2"
                android:layout_width="45dp"
                android:layout_height="38dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.004" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>