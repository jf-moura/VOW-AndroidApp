<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewDuration2"
        android:layout_width="255dp"
        android:layout_height="24dp"
        android:text="@string/duration"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewNumParticipants2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewNumParticipants2"
        app:layout_constraintTop_toBottomOf="@+id/textViewNumParticipants2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewNumParticipants2"
        android:layout_width="257dp"
        android:layout_height="23dp"
        android:text="@string/number_participants"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewTime2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewTime2"
        app:layout_constraintTop_toBottomOf="@+id/textViewTime2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewTime2"
        android:layout_width="255dp"
        android:layout_height="24dp"
        android:layout_marginBottom="484dp"
        android:text="@string/time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewAddress2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewAddress2"
        app:layout_constraintTop_toBottomOf="@+id/textViewAddress2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewActName2"
        android:layout_width="255dp"
        android:layout_height="24dp"
        android:text="@string/activity_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111" />

    <TextView
        android:id="@+id/textViewActOwner2"
        android:layout_width="255dp"
        android:layout_height="24dp"
        android:text="@string/organization"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewActName2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewActName2"
        app:layout_constraintTop_toBottomOf="@+id/textViewActName2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewAddress2"
        android:layout_width="336dp"
        android:layout_height="34dp"
        android:layout_marginBottom="516dp"
        android:text="@string/address"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewActOwner2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewActOwner2"
        app:layout_constraintTop_toBottomOf="@+id/textViewActOwner2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewRating"
        android:layout_width="255dp"
        android:layout_height="24dp"
        android:text="@string/rating"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewDuration2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewDuration2"
        app:layout_constraintTop_toBottomOf="@+id/textViewDuration2"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="46dp" />

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:numStars="5"
        app:layout_constraintEnd_toEndOf="@+id/textViewRating"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textViewRating"
        app:layout_constraintTop_toBottomOf="@+id/textViewRating" />

    <EditText
        android:id="@+id/editTextComment"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_comment_box"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/add_comment"
        android:inputType="textPersonName"
        android:padding="7dp"
        app:layout_constraintEnd_toEndOf="@+id/rating_bar"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/rating_bar"
        app:layout_constraintTop_toBottomOf="@+id/rating_bar" />

    <Button
        android:id="@+id/submitBttn"
        android:layout_width="63dp"
        android:layout_height="38dp"
        android:layout_marginTop="68dp"
        android:text="@string/submit"
        android:textSize="7sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/rating_bar"
        app:layout_constraintTop_toBottomOf="@+id/textViewRating" />

    <Button
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:layout_marginBottom="252dp"
        android:text="@string/post"
        android:textSize="6sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/editTextComment" />


</androidx.constraintlayout.widget.ConstraintLayout>