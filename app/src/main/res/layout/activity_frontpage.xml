<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/front_page">

    <Button
        android:id="@+id/loginBttn"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:text="@string/login"
        app:layout_constraintBottom_toTopOf="@+id/createAccBttn"
        app:layout_constraintEnd_toEndOf="@+id/imageViewFrontPage"
        app:layout_constraintStart_toStartOf="@+id/imageViewFrontPage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.79" />

    <Button
        android:id="@+id/createAccBttn"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:layout_marginBottom="324dp"
        android:text="@string/create_account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/loginBttn"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/loginBttn" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageViewFrontPage"
        android:layout_width="103dp"
        android:layout_height="97dp"
        android:layout_marginTop="56dp"
        android:src="@mipmap/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedSquare" />

    <TextView
        android:id="@+id/textViewInfoSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/learn_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>